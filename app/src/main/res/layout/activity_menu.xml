<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/bg_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ActivityWelcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/menu"
        android:textColor="@color/blue"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/searchEdt"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@mipmap/welcome_butten_bg_white"
        android:drawableRight="@mipmap/menu_loop_search"
        android:ems="10"
        android:hint="@string/search"
        android:padding="10dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <com.rat.nm.view.MenuItemView
                android:id="@+id/profileMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rat.nm.view.MenuItemView
                android:id="@+id/parameterMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rat.nm.view.MenuItemView
                android:id="@+id/alarmInfoMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <com.rat.nm.view.MenuItemView
                android:id="@+id/operationLogMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rat.nm.view.MenuItemView
                android:id="@+id/runningStateMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.rat.nm.view.MenuItemView
                android:id="@+id/settingsMIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
    </TableLayout>

</LinearLayout>
