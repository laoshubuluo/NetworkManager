<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/bg_welcome"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ActivityWelcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:text="@string/welcome_to"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@mipmap/welcome_logo" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/welcome_network_management" />


    <EditText
        android:id="@+id/userNameET"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@mipmap/login_icon_username"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10px"
        android:text="wangguan001"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/passwordET"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@mipmap/login_icon_password"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10px"
        android:text="wangguan001"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/welcome_butten_bg_white"
        android:text="@string/login"
        android:textColor="@color/blue" />

</LinearLayout>
